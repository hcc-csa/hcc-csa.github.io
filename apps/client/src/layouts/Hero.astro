<main class="container w-full max-w-none bg-black h-screen max-h-[840px] relative overflow-hidden flex flex-col items-center">
    <section class="container max-w-none relative z-[5] flex flex-col items-center h-full px-6 sm:px-9">
        <slot />
    </section>
    <element class="absolute top-0 left-0 z-[4] opacity-30">
        <img class="pulsating-anim" src="/images/concentric_circles.svg" alt="concentric circles">
    </element>
    <element class="absolute right-0 top-0 z-[4] opacity-30">
        <img src="/images/grid.svg" alt="grid">
    </element>
    <circle class=`absolute top-0 left-0 w-400 h-400 md:w-400 md:h-400 rounded-full bg-indigo-950 opacity-60 z-[1]`></circle>
    <circle class=`absolute bottom-[-200px] right-[0px] md:bottom-[-100px] md:right-[-100px] w-400 h-400 md:w-400 md:h-400  rounded-full bg-sky-400 opacity-60 z-[1]`></circle>
    <overlay class="absolute top-0 left-0 w-full h-full z-[2] backdrop-blur-4xl md:backdrop-blur-5xl bg-[#ffffff0d]" ></overlay>
    <texture class="absolute top-0 left-0 w-full h-full z-[3] bg-[url('/Texture.png')] opacity-10 bg-75%"></texture>
</main>

<style>
    .pulsating-anim{
        animation: pulsing 10s ease-in-out infinite alternate forwards;
        transform-origin: top left;
    }

    @keyframes pulsing {
        0%{
            transform: scale(0.9);
        }
        100%{
            transform: scale(1.1);
        }
    } 
</style>