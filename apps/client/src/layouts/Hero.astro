<main
  class='container relative flex h-screen max-h-[840px] w-full max-w-none flex-col items-center overflow-hidden bg-black'
>
  <section
    class='container relative z-[5] flex h-full max-w-none flex-col items-center px-6 sm:px-9'
  >
    <slot />
  </section>
  <element class='absolute left-0 top-0 z-[4] opacity-30'>
    <img
      class='pulsating-anim'
      src='/images/concentric_circles.svg'
      alt='concentric circles'
    />
  </element>
  <element class='absolute right-0 top-0 z-[4] opacity-30'>
    <img src='/images/grid.svg' alt='grid' />
  </element>
  <circle
    class=`absolute top-0 left-0 w-400 h-400 md:w-400 md:h-400 rounded-full bg-indigo-950 z-[1]`
  ></circle>
  <circle
    class=`absolute bottom-[-200px] right-[0px] md:bottom-[0px] md:right-[0px] w-400 h-400 md:w-400 md:h-400  rounded-full bg-sky-400 z-[1]`
