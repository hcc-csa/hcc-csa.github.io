<style>
  .pulsating-anim {
    animation: pulsing 10s ease-in-out infinite alternate forwards;
    transform-origin: top left;
  }

  @keyframes pulsing {
    0% {
      transform: scale(0.9);
    }
    100% {
      transform: scale(1.1);
    }
  }
</style>
