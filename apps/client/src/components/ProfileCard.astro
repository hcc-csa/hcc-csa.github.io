<card
  class='card sm:basis-22.5/100 relative aspect-square min-w-[250px] shrink-0 grow-0 basis-full cursor-pointer overflow-hidden rounded-md bg-slate-100'
>
  <img
    src='https://i.ibb.co/gSK6gBR/image-43.png'
    alt='event that happened'
    class='h-full w-full object-cover transition duration-700'
  />
  <overlay
    class='overlay absolute left-0 top-0 z-[1] h-full w-full bg-gradient-to-t from-black to-transparent'
  ></overlay>
  <container
    class='container absolute left-0 top-0 z-[2] flex h-full w-full flex-col justify-end p-5'
  >
    <h3 class='name text-xl font-extrabold transition-none'>Ariyan Behrouz</h3>
    <p class='post text-sm font-light transition-none'>President</p>
    <p class='quote mt-5 hidden text-sm font-normal transition-none'>
      ~ lorem ipsum ~
    </p>
  </container>
  <socials
    class='socials absolute bottom-0 left-0 z-[2] flex w-full flex-col p-5 pb-6 opacity-0 transition duration-500'
  >
    <line class='h-px w-full bg-slate-200'></line>
    <socialicons
      class='z-[3] mt-2 flex w-full items-center justify-center gap-5'
    >
      <socialicon
        class='flex aspect-square items-center justify-center rounded-full border border-slate-800 px-1'
      >
        <ion-icon name='mail' class='text-2xl text-slate-800'></ion-icon>
      </socialicon>
      <socialicon
        class='flex aspect-square items-center justify-center rounded-full border border-slate-800 px-1'
      >
        <ion-icon name='logo-discord' class='text-2xl text-slate-800'
        ></ion-icon>
      </socialicon>
      <socialicon
        class='flex aspect-square items-center justify-center rounded-full border border-slate-800 px-1'
      >
        <ion-icon name='globe' class='text-2xl text-slate-800'></ion-icon>
      </socialicon>
      <socialicon
        class='flex aspect-square items-center justify-center rounded-full border border-slate-800 px-1'
      >
        <ion-icon name='logo-github' class='text-2xl text-slate-800'></ion-icon>
      </socialicon>
    </socialicons>
  </socials>
</card>

<style>
  .container {
    width: 1px;
    transition: all 500ms ease-in-out;
    white-space: nowrap;
    text-align: center;
  }

  .card:hover img {
    opacity: 0;
  }

  .card:hover .overlay {
    opacity: 0;
  }
  .card:hover .socials {
    opacity: 1;
  }

  .card:hover .container {
    transition: all 500ms ease-in-out;
    background: transparent;
    color: #1e293b;
    width: 100%;
    transform: translate(0, -25%);
  }

  .card:hover .name {
    color: rgb(45 212 191);
    font-size: x-large;
  }

  .card:hover .post {
    font-weight: 700;
    font-size: large;
  }

  .card:hover .quote {
    display: block;
  }
</style>
