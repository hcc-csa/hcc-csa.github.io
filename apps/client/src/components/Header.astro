---
interface Props {
	page?: string;
}

const { page } = Astro.props;
---

<nav class="container h-16 relative z-50">
    <container class="w-full mx-auto fixed py-6 px-6 md:px-12 is-align-self-auto top-2 left-1/2 transform -translate-x-1/2">
        <div class="max-w-screen-xl flex items-center justify-between mx-auto z-5">
            <div class="flex items-center gap-2 z-50">
              <img class="h-7 w-auto" src="/images/Logo.png" alt="" />
            </div>
            <div class="flex items-center text-md gap-9 z-50 text-white">
              <a class=`cursor-pointer ${page=="home" ? "font-bold" : ""} group transition duration-300 hidden md:block`>
                Home
                <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-white"></span>
              </a>
              <span class="hidden md:block">/</span>
              <a class=`cursor-pointer ${page=="events" ? "font-bold" : ""} group transition duration-300 hidden md:block`>
                Events
                <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-white"></span>
              </a>
              <span class="hidden md:block">/</span>
              <a class=`cursor-pointer ${page=="gallery" ? "font-bold" : ""} group transition duration-300 hidden md:block`>
                Gallery
                <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-white"></span>
              </a>
              <span class="hidden md:block">/</span>
              <a class=`cursor-pointer ${page=="about" ? "font-bold" : ""} group transition duration-300 hidden md:block`>
                About
                <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-white"></span>
              </a>
              <span class="hidden md:block">/</span>
              <a class=`cursor-pointer ${page=="contact" ? "font-bold" : ""} group transition duration-300 hidden md:block`>
                Contact
                <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-white"></span>
              </a>
              <button
              class="md:hidden"
            >
            <ion-icon name="menu-outline" class="text-2xl"></ion-icon>
            </button>
            </div>
          </div>
    </container>
</nav>