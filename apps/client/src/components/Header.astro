---
interface Props {
	page?: string;
}

const { page } = Astro.props;
---

<nav class="container h-16 mb-20 relative z-50">
    <container class="w-full mx-auto fixed py-6 px-6 md:px-0 is-align-self-auto left-1/2 transform -translate-x-1/2">
        <div class="max-w-screen-xl flex items-center justify-between mx-auto z-5">
            <div class="flex items-center gap-2 z-50">
              <img class="h-7 w-auto" src="/images/Logo.png" alt="" />
            </div>
            <div class="flex items-center text-md gap-10 z-50 text-white">
              <a class=`cursor-pointer ${page=="home" ? "font-bold" : ""}`>
                Home
              </a>
              <span>/</span>
              <a class=`cursor-pointer" ${page=="events" ? "font-bold" : ""}`>
                Events
              </a>
              <span>/</span>
              <a class=`cursor-pointer" ${page=="gallery" ? "font-bold" : ""}`>
                Gallery
              </a>
              <span>/</span>
              <a class=`cursor-pointer" ${page=="about" ? "font-bold" : ""}`>
                About
              </a>
              <span>/</span>
              <a class=`cursor-pointer" ${page=="contact" ? "font-bold" : ""}`>
                Contact
              </a>
            </div>
          </div>
    </container>
</nav>